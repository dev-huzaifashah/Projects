<body>

  <div class="container">
    <h1>Contact Us</h1>
    <form id="contact-form">
      <div class="input-group">
        <input type="text" id="name" name="name" required>
        <label for="name">Your Name</label>
      </div>

      <div class="input-group">
        <input type="email" id="email" name="email" required>
        <label for="email">Your Email</label>
      </div>

      <div class="input-group">
        <textarea id="message" name="message" required></textarea>
        <label for="message">Your Message</label>
      </div>

      <button type="submit">Send Message</button>
      <p id="status"></p>
    </form>
  </div>

  <!-- EmailJS Library -->
  <script src="https://cdn.jsdelivr.net/npm/@emailjs/browser@4/dist/email.min.js"></script>
  <script>
    // Initialize EmailJS
    (function() {
      emailjs.init("17kPSQqYOcjtOqmkV"); // üîë Replace with your actual EmailJS public key
    })();

    // Form Submission
    const form = document.getElementById("contact-form");
    const statusMsg = document.getElementById("status");

    form.addEventListener("submit", function(event) {
      event.preventDefault();

      statusMsg.textContent = "Sending...";
      statusMsg.style.color = "#ffcb6b";

      emailjs.sendForm("service_3epezql","template_do7s1vk", this)
        .then(() => {
          statusMsg.textContent = "‚úÖ Message sent successfully!";
          statusMsg.style.color = "#00ff99";
          form.reset();
        }, (err) => {
          console.error("Error:", err);
          statusMsg.textContent = "‚ùå Failed to send message. Try again later.";
          statusMsg.style.color = "#ff4d4d";
        });
    });
  </script>

