<body>
    <!-- Background particles -->
    <div class="particles" id="particles"></div>

    <div class="container">
        <h1>Loading Timer</h1>
        
        <div class="timer-wrapper">
            <svg class="circular-timer" viewBox="0 0 300 300">
                <defs>
                    <linearGradient id="gradient" x1="0%" y1="0%" x2="100%" y2="100%">
                        <stop offset="0%" style="stop-color:#00f2fe;stop-opacity:1" />
                        <stop offset="100%" style="stop-color:#4facfe;stop-opacity:1" />
                    </linearGradient>
                </defs>
                <circle class="circle-bg" cx="150" cy="150" r="140"></circle>
                <circle class="circle-progress" cx="150" cy="150" r="140" id="progressCircle"></circle>
            </svg>
            <div class="timer-display" id="timerDisplay">10</div>
        </div>

        <div class="loading-text">
            Loading<span class="dots"><span class="dot">.</span><span class="dot">.</span><span class="dot">.</span></span>
        </div>

        <div class="progress-bar">
            <div class="progress-fill" id="progressFill"></div>
        </div>

        <div class="complete-message" id="completeMessage">
            ✨ Loading Complete! ✨
        </div>

        <button class="reset-btn" id="resetBtn" onclick="resetTimer()">Start Again</button>
    </div>

    <script>
        // Create animated particles
        function createParticles() {
            const particlesContainer = document.getElementById('particles');
            const particleCount = 50;

            for (let i = 0; i < particleCount; i++) {
                const particle = document.createElement('div');
                particle.className = 'particle';
                
                const size = Math.random() * 5 + 2;
                particle.style.width = size + 'px';
                particle.style.height = size + 'px';
                particle.style.left = Math.random() * 100 + '%';
                particle.style.animationDelay = Math.random() * 15 + 's';
                particle.style.animationDuration = (Math.random() * 10 + 10) + 's';
                
                particlesContainer.appendChild(particle);
            }
        }

        // Countdown timer logic
        let countdown = 10;
        let interval;
        const totalTime = 10;
        const circumference = 2 * Math.PI * 140; // radius = 140

        function startTimer() {
            const timerDisplay = document.getElementById('timerDisplay');
            const progressCircle = document.getElementById('progressCircle');
            const progressFill = document.getElementById('progressFill');
            const completeMessage = document.getElementById('completeMessage');
            const resetBtn = document.getElementById('resetBtn');

            interval = setInterval(() => {
                countdown--;
                timerDisplay.textContent = countdown;

                // Update circular progress
                const progress = (totalTime - countdown) / totalTime;
                const offset = circumference - (progress * circumference);
                progressCircle.style.strokeDashoffset = offset;

                // Update progress bar
                progressFill.style.width = (progress * 100) + '%';

                // Check if countdown is complete
                if (countdown <= 0) {
                    clearInterval(interval);
                    timerDisplay.textContent = '0';
                    
                    // Show completion message
                    setTimeout(() => {
                        completeMessage.style.display = 'block';
                        resetBtn.style.display = 'inline-block';
                    }, 500);
                }
            }, 1000);
        }

        function resetTimer() {
            countdown = 10;
            const timerDisplay = document.getElementById('timerDisplay');
            const progressCircle = document.getElementById('progressCircle');
            const progressFill = document.getElementById('progressFill');
            const completeMessage = document.getElementById('completeMessage');
            const resetBtn = document.getElementById('resetBtn');

            timerDisplay.textContent = countdown;
            progressCircle.style.strokeDashoffset = circumference;
            progressFill.style.width = '0%';
            completeMessage.style.display = 'none';
            resetBtn.style.display = 'none';

            clearInterval(interval);
            startTimer();
        }

        // Initialize
        createParticles();
        startTimer();
    </script>
</body>
</html>
