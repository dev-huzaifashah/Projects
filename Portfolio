  <nav>
    <div class="logo">HuzaifaShah.Dev</div>
    <ul id="navMenu">
      <li><a data-page="home">Home</a></li>
      <li><a data-page="about">About Me</a></li>
      <li><a data-page="resume">Resume</a></li>
      <li><a data-page="portfolio">Portfolio</a></li>
      <li><a data-page="contact">Contact Me</a></li>
    </ul>
    <div class="hamburger" id="hamburger">
      <span></span><span></span><span></span>
    </div>
    <button class="theme-toggle" id="themeBtn">Light Mode</button>
  </nav>

  <!-- Slider Section (content changes dynamically) -->
  <section class="slider" id="sliderContent">
    <div class="image-container">
      <img src="image/image.jpg" alt="Profile Image">
    </div>
    <div class="text">
      <h1>
        Hi, I am <br>
        <span class="typing" id="typingText"></span>
      </h1>
      <p>
        I specialize in creating visually appealing and user-friendly web interfaces.
        Passionate about combining creativity with functionality to deliver seamless
        digital experiences.
      </p>
    </div>
  </section>

  <script>
    // Theme Toggle
    const themeBtn = document.getElementById('themeBtn');
    themeBtn.addEventListener('click', () => {
      document.body.classList.toggle('light');
      themeBtn.textContent = document.body.classList.contains('light')
        ? 'Dark Mode'
        : 'Light Mode';
    });

    // Mobile Menu
    const hamburger = document.getElementById('hamburger');
    const navMenu = document.getElementById('navMenu');
    hamburger.addEventListener('click', () => navMenu.classList.toggle('active'));

    // Typing Animation (Home only)
    const typingText = document.getElementById("typingText");
    const words = ["Frontend Developer", "UI/UX Designer"];
    let i = 0, j = 0, deleting = false;
    function type() {
      if (!typingText) return;
      const current = words[i];
      if (!deleting && j < current.length) {
        typingText.textContent = current.substring(0, j + 1);
        j++;
        setTimeout(type, 100);
      } else if (deleting && j > 0) {
        typingText.textContent = current.substring(0, j - 1);
        j--;
        setTimeout(type, 60);
      } else if (!deleting && j === current.length) {
        deleting = true;
        setTimeout(type, 1000);
      } else if (deleting && j === 0) {
        deleting = false;
        i = (i + 1) % words.length;
        setTimeout(type, 500);
      }
    }
    type();

    // Dynamic Page Content
    const slider = document.getElementById("sliderContent");
    const pages = {
      home: `
        <div class="image-container">
          <img src="image/image.jpg" alt="Profile Image">
        </div>
        <div class="text">
          <h1>Hi, I am <br><span class="typing" id="typingText"></span></h1>
          <p>I specialize in creating visually appealing and user-friendly web interfaces. Passionate about combining creativity with functionality to deliver seamless digital experiences.</p>
        </div>`,
      about: `
        <div class="text" style="max-width:600px;">
          <h1>About Me</h1>
          <p>I’m Huzaifa Shah, a frontend developer and UI/UX designer with a passion for crafting elegant, responsive, and user-focused web experiences. I love turning ideas into interactive, visually engaging designs that perform beautifully across all devices.</p>
        </div>`,
      resume: `
        <div class="text" style="max-width:600px;">
          <h1>Resume</h1>
          <p><strong>Experience:</strong><br>Frontend Developer at XYZ Agency (2023–Present)<br>Intern UI Designer at ABC Studio (2022)</p>
          <p><strong>Education:</strong><br>Bachelor’s in Computer Science — COMSATS University</p>
        </div>`,
      portfolio: `
        <div class="text" style="max-width:600px;">
          <h1>Portfolio</h1>
          <p>Some of my featured works include modern eCommerce websites, portfolio pages, and custom UI dashboards. (You can later add images or project cards here!)</p>
        </div>`,
      contact: `
        <div class="text" style="max-width:600px;">
          <h1>Contact Me</h1>
          <p>Feel free to reach out via email or connect on LinkedIn.</p>
          <p><strong>Email:</strong> example@gmail.com<br><strong>LinkedIn:</strong> linkedin.com/in/huzaifashah</p>
        </div>`
    };

    // Navigation click event
    document.querySelectorAll("nav ul li a").forEach(link => {
      link.addEventListener("click", e => {
        const page = e.target.getAttribute("data-page");
        slider.classList.add("fade-out");
        setTimeout(() => {
          slider.innerHTML = pages[page];
          slider.classList.remove("fade-out");
          if (page === "home") type(); // restart typing animation
        }, 400);
      });
    });
  </script>
</body>
