<body>

<div class="container">

  <!-- INPUT SIDE -->
  <div class="input-side">
    <h2>Enter Profile Data</h2>

    <label>Name:</label>
    <input type="text" id="nameInput">

    <label>Job Title:</label>
    <input type="text" id="jobInput">

    <label>Image URL:</label>
    <input type="text" id="imageInput">

    <label>Background Color:</label>
    <input type="color" id="bgColorInput">

    <label>Border Color:</label>
    <input type="color" id="borderColorInput">

    <button onclick="updateProfile()">Update Profile</button>
  </div>

  <!-- OUTPUT SIDE -->
  <div class="output-side">
    <div class="profile-card" id="profileCard">
      <img id="profileImage" src="https://via.placeholder.com/120">
      <h3 id="profileName">Your Name</h3>
      <p id="profileJob">Job Title</p>
    </div>
  </div>

</div>

<script>
  function updateProfile() {
    const name = document.getElementById("nameInput").value;
    const job = document.getElementById("jobInput").value;
    const image = document.getElementById("imageInput").value;
    const bgColor = document.getElementById("bgColorInput").value;
    const borderColor = document.getElementById("borderColorInput").value;

    if (name) document.getElementById("profileName").innerText = name;
    if (job) document.getElementById("profileJob").innerText = job;
    if (image) document.getElementById("profileImage").src = image;

    document.getElementById("profileCard").style.backgroundColor = bgColor;
    document.getElementById("profileCard").style.borderColor = borderColor;
  }
</script>

</body>
